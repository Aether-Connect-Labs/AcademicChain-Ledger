{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "name": "academicchain-ledger-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for AcademicChain Ledger - Decentralized Academic Credential Verification System",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify": "hardhat verify",
    "lint": "eslint \"**/*.{js,ts,sol}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,sol,json}\"",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.40.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.7",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.14.0",
    "hardhat": "^2.26.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "hedera",
    "hashgraph",
    "smart-contracts",
    "solidity",
    "blockchain",
    "academic-credentials",
    "verification",
    "education",
    "web3",
    "dlt"
  ],
  "author": "AcademicChain Ledger Team <contact@academicchain.org>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
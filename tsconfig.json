{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@infra/*": ["packages/infrastructure/src/*"],
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
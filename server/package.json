{
  "name": "academicchain-server",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r ./src/polyfills/express-path-to-regexp.js src/app.js",
    "start": "node -r ./src/polyfills/express-path-to-regexp.js src/app.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:pm2:prod": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "monit:pm2": "pm2 monit",
    "build": "echo 'Server build complete'",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --testTimeout=8000",
    "audit:view": "powershell -NoProfile -Command \"Get-ChildItem -Path logs -Filter 'combined-*.log' | Sort-Object LastWriteTime -Descending | Select-Object -First 1 | ForEach-Object { Get-Content -Path $_.FullName -Tail 200 }\"",
    "audit:errors": "powershell -NoProfile -Command \"Get-ChildItem -Path logs -Filter 'combined-*.log' | Sort-Object LastWriteTime -Descending | Select-Object -First 1 | ForEach-Object { Select-String -Path $_.FullName -Pattern 'error' }\"",
    "audit:setup-cron": "node -e \"console.log('Winston rotaci√≥n diaria habilitada (zippedArchive, maxFiles=14d). No se requiere cron adicional.');\"",
    "metrics:init": "node scripts/init-metrics.js",
    "metrics:aggregate-daily": "node scripts/aggregate-daily.js",
    "metrics:generate-test": "node scripts/generate-test-metrics.js"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "dependencies": {
    "@bull-board/api": "^6.14.0",
    "@bull-board/express": "^6.14.0",
    "@hashgraph/sdk": "^2.43.0",
    "@lighthouse-web3/sdk": "^0.4.3",
    "@pinata/sdk": "^2.1.0",
    "algosdk": "^2.7.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bip39": "^3.1.0",
    "bullmq": "^5.0.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ed25519-hd-key": "^1.3.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.0",
    "geoip-lite": "^1.4.8",
    "googleapis": "^168.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "ipfs-http-client": "^60.0.1",
    "joi": "^17.11.0",

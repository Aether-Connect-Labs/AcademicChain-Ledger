    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-linkedin-oauth2": "^2.0.0",
    "pinata-web3": "^0.4.0",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",

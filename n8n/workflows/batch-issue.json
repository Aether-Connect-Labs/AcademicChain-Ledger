{
  "name": "Institution - Batch Credential Issuance",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "batch-issue",
        "options": {}
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [0, 0]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json.headers[\"x-acl-auth-key\"]}}",

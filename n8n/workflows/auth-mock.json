    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "{\n  \"success\": true,\n  \"token\": \"mock-n8n-token-{{$now.toFormat('yyyyMMdd')}}\",\n  \"user\": {\n    \"id\": \"admin-local\",\n    \"name\": \"Admin Local n8n\",\n    \"email\": \"{{$json.body.email}}\",\n    \"role\": \"admin\"\n  }\n}",

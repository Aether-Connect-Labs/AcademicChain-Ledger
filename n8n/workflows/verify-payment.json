{
  "name": "Payment Verification Service",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "verify-payment",
        "options": {}
      },
      "name": "Verify Payment Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [0, 0]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "{\n  \"success\": true,\n  \"valid\": true,\n  \"status\": \"confirmed\",\n  \"transactionId\": \"{{$json.body.transactionId}}\",\n  \"method\": \"{{$json.body.method}}\",\n  \"planId\": \"{{$json.body.planId}}\",\n  \"creditsGranted\": {{ $json.body.planId === 'starter' ? 100 : $json.body.planId === 'business' ? 500 : $json.body.planId === 'enterprise' ? 1000 : 500 }}\n}",
        "options": {}
      },
      "name": "Respond Verification",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [200, 0]
    }
  ],
  "connections": {
    "Verify Payment Webhook": {
      "main": [
        [
          {
            "node": "Respond Verification",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}

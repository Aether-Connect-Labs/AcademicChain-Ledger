{
  "name": "academicchain-ledger",
  "version": "1.0.0",
  "description": "Sistema revolucionario de credenciales acad√©micas en blockchain",
  "scripts": {
    "dev:api": "nodemon --watch packages/core --watch packages/infrastructure --watch apps/api apps/api/src/server.ts",
    "dev:web": "next dev apps/web",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
    "build": "npm run build:api && npm run build:web",
    "build:api": "tsc -p tsconfig.api.json",
    "build:web": "next build apps/web",
    "start": "concurrently \"npm:start:api\" \"npm:start:web\"",
    "start:api": "node apps/api/dist/server.js",
    "start:web": "next start apps/web",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "workspaces": [
    "server",
    "client",
    "contracts"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aether-Connect-Labs/AcademicChain-Ledger.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Aether-Connect-Labs/AcademicChain-Ledger/issues"
  },

{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/vite"
    }
  ],
  "routes": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ]
}
